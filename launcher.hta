<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>囲みマス</title>
  <script>
    window.moveTo(100, 100);
    window.resizeTo(400, 430);
    var shell = new ActiveXObject("Shell.Application");
    
    function battle() {
      shell.ShellExecute('deno', 'run -A client_deno/' + p1.value + ' --local');
      setTimeout(function() {
        shell.ShellExecute('deno', 'run -A client_deno/' + p2.value + ' --local');
      },100);
      shell.ShellExecute('chrome', 'http://localhost:8880/game/detail');
    }
  </script>
  <style>
    button, select, center {
      width: 100%;
      font-size: 30px;
    }
  </style>
</head>
<body>
  <center><img src="img/kakomimasu-logo.png" width="200"></center>
  <button onclick="shell.ShellExecute('powershell', 'iwr https://deno.land/x/install/install.ps1 -useb | iex')">
      Denoのインストール
  </button>
  <button onclick="shell.ShellExecute('deno', 'run -A apiserver/apiserver.ts')">
    サーバの起動
  </button>
  <select name="p1">
  	<option value="client_a1.js">client_a1.js</option>
  	<option value="client_a2.js">client_a2.js</option>
  	<option value="client_a3.js">client_a3.js</option>
  	<option value="client_a4.js">client_a4.js</option>
  	<option value="client_a5.js">client_a5.js</option>
  	<option value="client_none.js">client_none</option>
  	<option value="client_a1.js">kacom</option>
  </select>
  <center>VS</center>
  <select name="p2">
  	<option value="client_a1.js">client_a1.js</option>
  	<option value="client_a2.js">client_a2.js</option>
  	<option value="client_a3.js">client_a3.js</option>
  	<option value="client_a4.js">client_a4.js</option>
  	<option value="client_a5.js">client_a5.js</option>
  	<option value="client_none.js">client_none.js</option>
  	<option value="client_a1.js">kacom.js</option>
  </select>
  <button onclick="battle()">
    対戦する
  </button>
</body>
</html>
